<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Money" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/maincolour</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainColorButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/maincolour</item>
    </style>

    <style name="Theme.Money.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Money.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Money.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationItem" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/maincolour</item>
        <item name="colorSecondary">@color/textcolour2</item>
    </style>

    <style name="EditText">
        <item name="colorControlNormal">@color/back</item>
        <item name="colorControlActivated">@color/maincolour</item>
        <item name="colorControlHighlight">@color/maincolour</item>
    </style>
</resources>